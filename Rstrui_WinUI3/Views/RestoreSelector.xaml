<?xml version="1.0" encoding="utf-8" ?>

<Page
	x:Class="Rstrui_WinUI3.Views.RestoreSelector"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Rstrui_WinUI3.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>

		<!--  自訂標題列  -->

		<Grid
			x:Name="AppTitleBar"
			Height="32"
			Margin="0,0,0,0"
			VerticalAlignment="Top"
			Background="Transparent">

			<TextBlock
				Margin="12,0,0,0"
				VerticalAlignment="Center"
				FontSize="12"
				Foreground="{ThemeResource TextFillColorPrimaryBrush}"
				Text="Fluent System Restore" />

		</Grid>

		<!--  主內容  -->

		<Grid Margin="0,24,0,0" Padding="40,30,40,0">

			<Grid.RowDefinitions>

				<RowDefinition Height="Auto" />

				<RowDefinition Height="*" />

				<RowDefinition Height="Auto" />

			</Grid.RowDefinitions>

			<!--  標題區域  -->

			<StackPanel Grid.Row="0" Spacing="8">

				<TextBlock
					Margin="0,0,0,7"
					FontSize="28"
					FontWeight="SemiBold"
					Text="{x:Bind LocalizedStrings.RestoreSelectorTitle}" />

				<StackPanel Orientation="Horizontal">

					<TextBlock
						FontSize="14"
						Foreground="{ThemeResource TextFillColorSecondaryBrush}"
						LineHeight="20"
						Text="{x:Bind LocalizedStrings.RestoreSelectorTimeZome}"
						TextWrapping="Wrap" />

					<TextBlock
						Margin="3,0,0,0"
						FontSize="14"
						Foreground="{ThemeResource TextFillColorSecondaryBrush}"
						LineHeight="20"
						Text="{x:Bind CurrentTimeZone}"
						TextWrapping="Wrap" />

				</StackPanel>

			</StackPanel>

			<!--  主要內容區塊  -->

			<Grid Grid.Row="1" Margin="0,20,0,0">

				<Grid.RowDefinitions>

					<RowDefinition Height="*" />

					<RowDefinition Height="Auto" />

				</Grid.RowDefinitions>

				<!--  還原點列表  -->

				<Border
					Grid.Row="0"
					BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
					BorderThickness="1"
					CornerRadius="8">

					<ListView
						x:Name="RestorePointsListView"
						Padding="0"
						IsItemClickEnabled="False"
						SelectionMode="Single">

						<ListView.ItemContainerStyle>

							<Style TargetType="ListViewItem">

								<Setter Property="HorizontalContentAlignment" Value="Stretch" />

								<Setter Property="Padding" Value="16,12" />

								<Setter Property="Margin" Value="0" />

							</Style>

						</ListView.ItemContainerStyle>

						<ListView.ItemTemplate>

							<DataTemplate x:DataType="local:RestorePointInfo">

								<Grid>

									<Grid.ColumnDefinitions>

										<ColumnDefinition Width="200" />

										<ColumnDefinition Width="200" />

										<ColumnDefinition Width="200" />

									</Grid.ColumnDefinitions>

									<TextBlock
										Grid.Column="0"
										VerticalAlignment="Center"
										FontSize="14"
										Text="{x:Bind Name}"
										TextTrimming="CharacterEllipsis" />

									<TextBlock
										Grid.Column="1"
										Margin="16,0,0,0"
										VerticalAlignment="Center"
										FontSize="14"
										Foreground="{ThemeResource TextFillColorSecondaryBrush}"
										Text="{x:Bind DateTimeFormatted}"
										TextTrimming="CharacterEllipsis" />

									<TextBlock
										Grid.Column="2"
										Margin="16,0,0,0"
										VerticalAlignment="Center"
										FontSize="14"
										Foreground="{ThemeResource TextFillColorSecondaryBrush}"
										Text="{x:Bind Type}"
										TextTrimming="CharacterEllipsis" />

								</Grid>

							</DataTemplate>

						</ListView.ItemTemplate>

					</ListView>

				</Border>

				<!--  Scan affected apps 超連結  -->

				<HyperlinkButton
					Grid.Row="1"
					Margin="0,16,0,0"
					Click="ScanAffectedApps_Click"
					Content="{x:Bind LocalizedStrings.AffectedAppsBtn}" />

			</Grid>

			<!--  按鈕區塊  -->

			<Grid
				Grid.Row="2"
				Margin="-30,20,-40,0"
				Padding="30,16,16,16"
				Background="{ThemeResource LayerFillColorDefaultBrush}"
				BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
				BorderThickness="0,1,0,0">

				<Grid.ColumnDefinitions>

					<ColumnDefinition Width="*" />

					<ColumnDefinition Width="Auto" />

					<ColumnDefinition Width="Auto" />

				</Grid.ColumnDefinitions>

				<!--  左側空白區域  -->

				<Border Grid.Column="0" />

				<!--  Back 按鈕  -->

				<Button
					Grid.Column="1"
					MinWidth="140"
					Margin="0,0,12,0"
					Padding="20,7"
					Click="Back_Click"
					Content="{x:Bind LocalizedStrings.Back}"
					Style="{StaticResource DefaultButtonStyle}" />

				<!--  Next 按鈕  -->

				<Button
					x:Name="NextButton"
					Grid.Column="2"
					MinWidth="140"
					Padding="20,7"
					Click="Next_Click"
					Content="{x:Bind LocalizedStrings.Next}"
					IsEnabled="False"
					Style="{StaticResource AccentButtonStyle}" />

			</Grid>

		</Grid>

	</Grid>

</Page>