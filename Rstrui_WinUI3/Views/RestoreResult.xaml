<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Rstrui_WinUI3.Views.RestoreResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rstrui_WinUI3.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Restore Point Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Name:" FontWeight="Bold" />
            <TextBlock Text="{x:Bind RestorePoint.Name}" Margin="0,0,0,10" />

            <TextBlock Text="Date:" FontWeight="Bold" />
            <TextBlock Text="{x:Bind RestorePoint.DateTimeFormatted}" Margin="0,0,0,10" />

            <TextBlock Text="Type:" FontWeight="Bold" />
            <TextBlock Text="{x:Bind RestorePoint.Type}" Margin="0,0,0,10" />

            <TextBlock Text="Sequence Number:" FontWeight="Bold" />
            <TextBlock Text="{x:Bind RestorePoint.SequenceNumber}" Margin="0,0,0,10" />

            <TextBlock Text="Description:" FontWeight="Bold" />
            <TextBlock Text="{x:Bind RestorePoint.Description}" Margin="0,0,0,10" />

            <Button Content="Back" Click="Back_Click" HorizontalAlignment="Left" Margin="0,20,0,0" />
            <Button Content="Restore" Click="Restore_Click" HorizontalAlignment="Left" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
