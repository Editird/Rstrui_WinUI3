<?xml version="1.0" encoding="utf-8" ?>

<Page
	x:Class="Rstrui_WinUI3.Views.RestoreResult"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Rstrui_WinUI3.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<!--  自訂標題列  -->
		<Grid
			x:Name="AppTitleBar"
			Height="32"
			Margin="0,0,0,0"
			VerticalAlignment="Top"
			Background="Transparent">
			<TextBlock
				Margin="12,0,0,0"
				VerticalAlignment="Center"
				FontSize="12"
				Foreground="{ThemeResource TextFillColorPrimaryBrush}"
				Text="Fluent System Restore" />
		</Grid>

		<!--  主內容  -->
		<Grid Margin="0,24,0,0" Padding="40,30,40,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<!--  標題區域  -->
			<StackPanel Grid.Row="0" Spacing="8">
				<TextBlock
					Margin="0,0,0,7"
					FontSize="28"
					FontWeight="SemiBold"
					Text="{x:Bind LocalizedStrings.RestoreResultTitle}" />
				<TextBlock
					FontSize="14"
					Foreground="{ThemeResource TextFillColorSecondaryBrush}"
					LineHeight="20"
					Text="{x:Bind LocalizedStrings.RestoreResultSubtitle}"
					TextWrapping="Wrap" />

				<InfoBar
					x:Name="RestoreResultAttention"
					Title="{x:Bind LocalizedStrings.RestoreResultAttentionTitle}"
					IsClosable="False"
					Message="{x:Bind LocalizedStrings.RestoreResultAttention}" />
			</StackPanel>

			<!--  主要內容區塊  -->
			<Grid Grid.Row="1" Margin="0,0,0,0">
				<Border
					Padding="24,20"
					BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
					BorderThickness="0"
					CornerRadius="8">
					<StackPanel Spacing="8">
						<StackPanel Orientation="Horizontal" Spacing="12">
							<TextBlock
								Width="160"
								VerticalAlignment="Center"
								FontWeight="Bold"
								Text="{x:Bind LocalizedStrings.RestoreResultName}" />
							<TextBlock VerticalAlignment="Center" Text="{x:Bind RestorePoint.Name}" />
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="12">
							<TextBlock
								Width="160"
								VerticalAlignment="Center"
								FontWeight="Bold"
								Text="{x:Bind LocalizedStrings.RestoreResultDate}" />
							<TextBlock VerticalAlignment="Center" Text="{x:Bind RestorePoint.DateTimeFormatted}" />
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="12">
							<TextBlock
								Width="160"
								VerticalAlignment="Center"
								FontWeight="Bold"
								Text="{x:Bind LocalizedStrings.RestoreResultType}" />
							<TextBlock VerticalAlignment="Center" Text="{x:Bind RestorePoint.Type}" />
						</StackPanel>
						<ProgressRing
							x:Name="RestoreProgressRing"
							HorizontalAlignment="Center"
							IsActive="True"
							Visibility="Collapsed" />
					</StackPanel>
				</Border>
			</Grid>

			<!--  按鈕區塊  -->
			<Grid
				Grid.Row="2"
				Margin="-40,20,-40,0"
				Padding="30,16,16,16"
				Background="{ThemeResource LayerFillColorDefaultBrush}"
				BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
				BorderThickness="0,1,0,0">

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<!--  左側空白區域  -->
				<Border Grid.Column="0" />

				<!--  Back 按鈕  -->
				<Button
					x:Name="BackButton"
					Grid.Column="1"
					MinWidth="140"
					Margin="0,0,12,0"
					Padding="20,7"
					Click="Back_Click"
					Content="{x:Bind LocalizedStrings.Back}"
					Style="{StaticResource DefaultButtonStyle}" />

				<!--  Restore 按鈕  -->
				<Button
					x:Name="NextButton"
					Grid.Column="2"
					MinWidth="140"
					Padding="20,7"
					Click="Restore_Click"
					Content="{x:Bind LocalizedStrings.RestoreResultRestore}"
					Style="{StaticResource AccentButtonStyle}" />
			</Grid>
		</Grid>
	</Grid>
</Page>